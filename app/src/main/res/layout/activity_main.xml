        android:text="No Name"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@id/iv_top_image_view"
        app:layout_constraintEnd_toStartOf="@id/tv_text_view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lr_linear_layout" />

    <TextView
        android:id="@+id/tv_text_view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="304dp"
        android:layout_marginBottom="460dp"
        android:layout_marginTop="226dp"
        android:background="@drawable/ic_mode"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

